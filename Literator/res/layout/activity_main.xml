<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    <ImageView
        android:id="@+id/header_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/header_bar"
        android:src="@drawable/header_bar" />

    <TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </LinearLayout>
</TabHost>
    
    <ImageView
        android:id="@+id/menue_bar_layer1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/menue_bar_layer1"
        android:src="@drawable/menue_bar_layer1" />

    <ImageButton
        android:id="@+id/normal_scanned_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/tab_button"
        android:src="@drawable/normal_scanned_books" />

    <ImageButton
        android:id="@+id/roll_over_scannend_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/tab_button"
        android:src="@drawable/roll_over_scanned_books" />

    <ImageButton
        android:id="@+id/normal_prefrences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/tab_button"
        android:src="@drawable/normal_prefrences" />

    <ImageButton
        android:id="@+id/roll_over_prefrences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/tab_button"
        android:src="@drawable/roll_over_prefrences" />

    <ImageButton
        android:id="@+id/scan_isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/tab_button"
        android:src="@drawable/scan_isbn" />

    <ImageButton
        android:id="@+id/normal_bibliograph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/scan_isbn"
        android:layout_toRightOf="@id/normal_scanned_books"
        android:background="@android:color/transparent"
        android:contentDescription="@string/tab_button"
        android:src="@drawable/normal_bibliograph" />

    <ImageButton
        android:id="@+id/roll_over_bibliograph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/scan_isbn"
        android:layout_toRightOf="@id/roll_over_scannend_books"
        android:background="@android:color/transparent"
        android:contentDescription="@string/tab_button"
        android:src="@drawable/roll_over_bibliograph" />

    <ImageButton
        android:id="@+id/normal_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/normal_prefrences"
        android:layout_toRightOf="@id/scan_isbn"
        android:background="@android:color/transparent"
        android:contentDescription="@string/tab_button"
        android:src="@drawable/normal_mail" />

    <ImageButton
        android:id="@+id/roll_over_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/roll_over_prefrences"
        android:layout_toRightOf="@id/scan_isbn"
        android:background="@android:color/transparent"
        android:contentDescription="@string/tab_button"
        android:src="@drawable/roll_over_mail" />

</RelativeLayout>